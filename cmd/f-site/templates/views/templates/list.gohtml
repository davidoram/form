<html>

<head>
  <link rel='stylesheet' href='{{ assetUrl "css/bootstrap.min.css" }}'>
</head>

<body>
  <nav class="navbar navbar-default">
    <div class="container-fluid">
    <ul class="nav navbar-nav">
      <li><a href="{{ urlFor "home" }}">Home</a></li>
    </ul>
  </nav>

  <a href="{{ urlFor "get_new_template" }}">New Template</a>
  <table class="table table-striped table-bordered">
    <thead>
      <th>#</th>
      <th>Name</th>
    </thead>
    <tbody>
      {{range $index, $element := .Templates}}
      <tr>
        <th>{{ $element.ID }}</th>
        <th>TODO Name</th>
      </tr>
      {{else}}
        <tr>
          <th colspan=2>No templates. Click <a href="{{ urlFor "get_new_template" }}">here</a> to add a new template.
        </tr>
      {{end}}
    </tbody>
  </table>

</body>

</html>